root { 
display: block;
}

body {
  padding-top: 20px;
  padding-bottom: 20px;
}

.spinner {
  display:none;
}

div.notice {
  font-size: 1.5em;
}

div.error {
  color: #c00;
  font-size: 1.5em;
}

table.blue-line {
  border: 2px solid #cdd;
}

table.blue-line tr{
  border: 1px dotted #cdd;
}

table.blue-line tr td{
  padding: 5px;
}

table.blue-line tr th strong {
  font-size: 1.4em;
}

table.clear-table,
table.clear-table tr,
table.clear-table tr td,
table.clear-table tr th strong {
  border: 0px;
}

.corner-all {
  /* corner */
  -webkit-border-radius: 8px; /* safari,google */
  -moz-border-radius: 8px;	/* firefox,opera */
  border-radius: 8px;			/* ie */
  behavior: url('/javascript/pie/PIE.htc');
}

/* CONTAINER WRAP */
#container {
  background: #cdd url('/images/layout/bg.png') repeat-x;
  margin: 0 auto;
  border: 1px solid #888;
}

#header {
  margin-bottom: 20px;
}

#header .login {
  float: right;
}

#header .logo {
  color: #fff;
  float: left;
  height: 30px;
}

#header .menu {
  padding-left: 0px;
}

#header .menu ul li {
  list-style: none;
  margin-left: 5px;
}

#header .menu ul li a {
  float: left;
  text-align: center;
  background: url('/images/layout/button.png') repeat-x;
  padding: 4px;
  border: 3px solid #acf;
  font: 1em arial;
  width: 120px;
  text-transform: uppercase;
  text-decoration: none;
  margin-right: 15px;
}

#content .sidebar {
  padding: 5px;
  margin-bottom: 10px;
}

#content .content .products {
  list-style: none;
  margin: 0px;
}

#content .content .products li {
  margin-left: 10px;
  float: left;
  padding: 5px;
  border: 2px solid #cdd;
  margin-bottom: 10px;
}



#content .sidebar .submenu ul li {
  margin-top: 18px;
  list-style: none;
  margin-left: 5px;
}

#content .sidebar .submenu ul li a {
  text-align: center;
	background: url('/images/layout/button.png') repeat-x;
	padding: 4px;
	border: 3px solid #acf;
	font: 1em arial;
  width: 150px;
  text-transform: uppercase;
  text-decoration: none;
}

#content .sidebar .submenu span, #content .sidebar .category span {
  font: 1.3em Arial, sans-serif;
  color: #999;
  text-indent: inherit;
}

#content .sidebar .category ul li {
  list-style: none;
  margin: 10px;
  
}

#content {
  height: 400px;
  display: table;
}

#content .sidebar {
  background: white;
  border: 5px solid #acf;
}

#content .content {
  background: white;
  border: 5px solid #acf;
  padding: 10px;
  margin-bottom: 10px;
}

#footer {
  height: 20px;
}

